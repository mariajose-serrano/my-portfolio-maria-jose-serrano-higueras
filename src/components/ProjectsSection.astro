---
import ProjectCard from "@components/ProjectCard.astro";
import Typescript from "@assets/icons/typescript.astro";
import React from "@assets/icons/react.astro";
import Supabase from "@assets/icons/supabase.astro";
import Tailwind from "@assets/icons/tailwind.astro";
---

<section class="my-20">
  <h2 class="text-2xl font-semibold mb-2">Projects</h2>
  <hr class="mb-6 border-zinc-600" />

  <ProjectCard
    projectTitle="First Project React Proyectos Molones Front"
    projectDescription="Project focused on HTML, CSS, and JavaScript fundamentals, layout, and responsive design."
    projectLink="https://github.com/mariajose-serrano/project-promo-58-module-3-team-3-Proyectos-Molones"
    image="/my-portfolio-maria-jose-serrano-higueras/images/first-project-react.png"
  >
    <Tailwind />
    <Typescript />
  </ProjectCard>

  <ProjectCard
    projectTitle="Harry Potter Web App"
    projectDescription="Interactive web application developed using React, state management, and dynamic content."
    projectLink="https://github.com/mariajose-serrano/modulo-3-evaluacion-final-mariajose-serrano-Harry-Potter"
    image="/my-portfolio-maria-jose-serrano-higueras/images/harrypotterlogo.png"
  >
    <React />
    <Typescript />
    <Tailwind />
  </ProjectCard>

  <ProjectCard
    projectTitle="Twitter Lab"
    projectDescription="Frontend project replicating core Twitter functionalities. Focused on components, layout, and user interaction."
    projectLink="https://github.com/mariajose-serrano/modulo-2-evaluacion-final-bis-mariajose-serrano-TwitterLab"
    image="/my-portfolio-maria-jose-serrano-higueras/images/twitterlablogo.png"
  >
    <React />
    <Tailwind />
    <Typescript />
  </ProjectCard>

  <ProjectCard
    projectTitle="Grogu Game"
    projectDescription="A fun interactive browser game developed with React and Vite, using JavaScript, HTML, and SCSS. The project demonstrates modular component design, responsive UI styling, and fast build tooling powered by Vite, with dependency management via npm."
    projectLink="https://github.com/mariajose-serrano/promo-58-module-3-pair-Y-grogu-game"
    image="/my-portfolio-maria-jose-serrano-higueras/images/groguimage.png"
  >
    <React />
    <Tailwind />
    <Typescript />
  </ProjectCard>

  <ProjectCard
    projectTitle="ADATASKS"
    projectDescription="A set of interactive tasks built using vanilla JavaScript, HTML, and CSS. The project showcases fundamental DOM manipulation, event handling, and responsive styling without external frameworks, demonstrating clean organization of markup, style, and script in a simple task-based web application."
    projectLink="https://github.com/mariajose-serrano/promo-58-modulo-2-pair-1-ada-tasks"
    image="/my-portfolio-maria-jose-serrano-higueras/images/adataskpic.png"
  >
    <React />
    <Tailwind />
    <Typescript />
  </ProjectCard>

  <ProjectCard
    projectTitle="Awesome Profile Cards"
    projectDescription="Interactive web project created with HTML, CSS/SASS, and JavaScript. It allows users to create and preview profile cards in real time, using LocalStorage to save data. The project was developed as a team using Git and GitHub and deployed with GitHub Pages."
    projectLink="https://github.com/mariajose-serrano/project-promo-58-module-2-team-1-awesome-profile-cards"
    image="/my-portfolio-maria-jose-serrano-higueras/images/a-profile-cards.png"
  >
    <React />
    <Tailwind />
    <Typescript />
  </ProjectCard>

  <ProjectCard
    projectTitle="ADAKITTEN"
    projectDescription="A single-page web app built with HTML, CSS, and JavaScript that lets users view and manage a list of cats. The app includes interactive features like filtering and adding new cats, demonstrating DOM manipulation and event handling in plain JavaScript. Built with fundamental front-end technologies and developed with Git/GitHub."
    projectLink="https://github.com/mariajose-serrano/promo-58-modulo-2-pair-1-ada-kitten"
    image="/my-portfolio-maria-jose-serrano-higueras/images/adakittenimage.png"
  >
    <React />
    <Tailwind />
    <Typescript />
  </ProjectCard>

  <ProjectCard
    projectTitle="SPOTIFY"
    projectDescription="web page built with HTML and CSS that recreates a Spotify-inspired interface layout. The project focuses on structuring content and styling a mock music player UI using fundamental front-end technologies. Development was done with basic web languages to practice responsive layout and visual design."
    projectLink="https://github.com/mariajose-serrano/promo-58-module-1-pair-6-spotify"
    image="/my-portfolio-maria-jose-serrano-higueras/images/spotify_logo_icon_.png"
  >
    <React />
    <Tailwind />
    <Typescript />
  </ProjectCard>

  <ProjectCard
    projectTitle="Proyectos Molones Back"
    projectDescription="Full-stack group project built with React on the front end and Node.js + Express on the back end. The application includes dynamic user interactions, API communication, and server-side logic. Styled with SCSS and developed collaboratively using Git and GitHub, focusing on learning how front end and back end work together."
    projectLink="https://github.com/mariajose-serrano/promo-58-module-4-group-3-Proyectos-molones-Back"
    image="/my-portfolio-maria-jose-serrano-higueras/backendimage.png"
  >
    <React />
    <Tailwind />
    <Typescript />
  </ProjectCard>
</section>
